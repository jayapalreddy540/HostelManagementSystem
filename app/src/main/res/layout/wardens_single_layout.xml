<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:id="@+id/wardens_single"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/wardens_single_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/default_img" />

            <TextView
                android:id="@+id/wardens_single_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/phone"
                android:text="Mobile"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/wardens_single_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/wardens_single_mobile"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="35dp"
                android:layout_toStartOf="@+id/phone"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/phone"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="21dp"
                android:layout_toStartOf="@+id/sms"
                android:src="@drawable/phone" />

            <ImageButton
                android:id="@+id/sms"
                android:layout_width="45dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="29dp"
                android:src="@drawable/sms" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>