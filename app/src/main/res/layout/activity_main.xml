<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.codme.hostelmanagementsystem.MainActivity">


    <Button
        android:id="@+id/btnWardens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAddwarden"
        android:layout_marginBottom="33dp"
        android:text="Wardens List" />

    <Button
        android:id="@+id/btnAddwarden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMsg"
        android:layout_marginBottom="34dp"
        android:text="ADD Warden" />


    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@+id/btnWardens"
        android:layout_marginBottom="49dp"
        android:text="status"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/btnMap"
        android:layout_marginBottom="47dp"
        android:text="SEND MSG" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="61dp"
        android:text="Currrent Location" />
</RelativeLayout>