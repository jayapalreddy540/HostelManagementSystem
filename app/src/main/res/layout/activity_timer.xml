<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".TimerActivity" >

    <Button
        android:id="@+id/setDate"
        android:layout_width="184dp"
        android:layout_height="64dp"
        android:layout_above="@+id/textDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="36dp"
        android:text="SET DATE" />

    <Button
        android:id="@+id/setTime"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_above="@+id/textDate"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/setDate"
        android:text="SET TIME" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="33dp"
        android:text="Date : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submitBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="24dp"
        android:text="Time : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="27dp"
        android:text="Submit" />

    <EditText
        android:id="@+id/reasonOuting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="Reason"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="57dp"
        android:layout_above="@+id/reasonOuting"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="27dp"
        android:text="CREATE  OUTING"
        android:textSize="30sp" />


</RelativeLayout>